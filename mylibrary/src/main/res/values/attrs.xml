<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CropImageView">
        <attr name="cropMaskColor" format="color"/>
        <attr name="cropBorderColor" format="color"/>
        <attr name="cropBorderWidth" format="dimension"/>
        <attr name="cropFocusWidth" format="dimension"/>
        <attr name="cropFocusHeight" format="dimension"/>
        <attr name="cropStyle" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="lib_pub_ToggleButton">
        <attr name="lib_pub_tbtn_colorThumb" format="color" />
        <attr name="lib_pub_tbtn_colorTrackOpen" format="color" />
        <attr name="lib_pub_tbtn_colorTrackOff" format="color" />
        <attr name="lib_pub_tbtn_colorPadding" format="color" />
        <attr name="lib_pub_tbtn_padding" format="dimension" />
        <attr name="lib_pub_tbtn_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="GloriousRecyclerView">
        <attr name="hideNoMoreData" format="boolean" />
        <attr name="loadMoreTextColor" format="color|reference" />
        <attr name="loadingMoreText" format="string|reference" />
        <attr name="loadMoreFailedText" format="string|reference" />
        <attr name="loadAllCompleteText" format="string|reference" />
        <attr name="loadMoreTextSize" format="dimension" />
        <attr name="loadMoreBackground" format="color|reference" />
        <attr name="loadMoreIndeterminateDrawable" format="reference" />
    </declare-styleable>

</resources>