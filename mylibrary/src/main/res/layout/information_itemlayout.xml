<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--资讯布局-->
    <LinearLayout
        android:id="@+id/recommendnews_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29.5dp">

            <ImageView
                android:id="@+id/recommenditem_headericon"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/recommenditem_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/bg_000000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/recommenditem_follow"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textColor="@color/bg_E73828"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/recommenditem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/bg_000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/recommenditem_zhaiyao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/bg_333333"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/recommenditem_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/recommenditem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/bg_999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/recommenditem_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2019-12-02"
                android:layout_gravity="center_vertical"
                android:textColor="@color/bg_999999"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/browse" />

            <TextView
                android:id="@+id/recommenditem_browsecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="02"
                android:textColor="@color/bg_999999"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/recommenditem_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="12"
                android:textColor="@color/bg_999999"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/recommenditem_collect_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/nopraise" />

            <TextView
                android:id="@+id/recommenditem_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="12"
                android:textColor="@color/bg_999999"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="34.5dp"
            android:layout_marginRight="15dp"
            android:background="@color/bg_e3e3e3" />
    </LinearLayout>


</LinearLayout>