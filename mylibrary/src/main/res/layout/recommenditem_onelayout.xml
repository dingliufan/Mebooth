<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="29.5dp"
    android:orientation="vertical"
    android:background="@color/bg_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/recommenditem_headericon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/recommenditem_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="黑暗骑士"
            android:textColor="@color/bg_000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recommenditem_follow"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/follow"
            android:text="关注"
            android:gravity="center"
            android:textColor="@color/bg_333333"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/recommenditem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/mebooth_delete"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/recommenditem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxEms="45"
        android:singleLine="true"
        android:text="十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见"
        android:textColor="@color/bg_000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/recommenditem_imgone"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/recommenditem_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="北京市朝阳区奥体中心"
        android:drawableLeft="@drawable/gpsimg"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:textColor="@color/bg_000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/recommenditem_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019-12-02"
            android:textColor="@color/bg_7d7d7d"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/comment"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/recommenditem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:textColor="@color/bg_7d7d7d"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"/>

        <ImageView
            android:id="@+id/recommenditem_collect_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nocollect" />

        <TextView
            android:id="@+id/recommenditem_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="12"
            android:textColor="@color/bg_7d7d7d"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="34.5dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_e3e3e3" />

</LinearLayout>