<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/decorationgrid_item_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/decorationgrid_item" />

        <ImageView
            android:id="@+id/decorationgrid_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/decorationgrid_godeblock" />

    </FrameLayout>

    <TextView
        android:id="@+id/decorationgrid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="次元链接"
        android:textColor="@color/bg_666666"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/decorationgrid_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="完成手机号注册"
        android:gravity="center"
        android:textColor="@color/bg_999999"
        android:textSize="10sp" />

</LinearLayout>