<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/newmainheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:id="@+id/public_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:src="@drawable/back"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/main_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/people_pluginlogo"
                    android:visibility="gone" />
            </FrameLayout>


            <TextView
                android:id="@+id/public_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/bg_000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/public_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:textColor="@color/bg_000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/consult_qrcode"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="27dp"
                    android:src="@drawable/home_qrcode" />

                <ImageView
                    android:id="@+id/consult_publish"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="27dp"
                    android:src="@drawable/publish_img" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            app:statusBarScrim="@android:color/transparent">


        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!--<include layout="@layout/inside_fixed_bar" />-->

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/moudle_headertwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            app:tl_indicator_color="@color/bg_E73828"
            app:tl_indicator_corner_radius="1.5dp"
            app:tl_indicator_height="3dp"
            app:tl_tab_padding="7.5dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_textSelectColor="@color/bg_333333"
            app:tl_textUnselectColor="@color/bg_999999"
            app:tl_textsize="16sp" />

        <ImageView
            android:id="@+id/userheadericon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="23dp"
            android:src="@drawable/defaulticon" />
        <!--<com.google.android.material.tabs.TabLayout-->
        <!--android:id="@+id/tab_layout"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--app:tabBackground="@android:color/transparent"-->
        <!--app:tabIndicatorColor="@color/bg_E73828"-->
        <!--app:tabIndicatorFullWidth="false"-->
        <!--app:tabMinWidth="20dp"-->
        <!--android:layout_marginLeft="25dp"-->
        <!--app:tabMode="scrollable"-->
        <!--app:tabPaddingEnd="8dp"-->
        <!--app:tabPaddingStart="12dp"-->
        <!--app:tabRippleColor="@android:color/transparent"-->
        <!--app:tabTextAppearance="@style/TabText"-->
        <!--app:tabTextColor="@color/bg_9a9a9a" >-->
        <!--</com.google.android.material.tabs.TabLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>