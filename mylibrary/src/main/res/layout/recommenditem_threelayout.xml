<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="29.5dp"
    android:background="@color/bg_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/recommenditem_headericon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/recommenditem_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="黑暗骑士"
            android:textColor="@color/bg_000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recommenditem_follow"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/bg_333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/recommenditem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:src="@drawable/mebooth_delete"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/recommenditem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/bg_000000"
        android:textSize="17sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recommenditem_imgone"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/recommenditem_imgtwo"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:id="@+id/recommenditem_imgthree"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/usertopic_isreview"
            android:layout_width="34dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/underreview"
            android:gravity="center"
            android:text="审核中"
            android:visibility="gone"
            android:textColor="@color/bg_ffffff"
            android:textSize="9sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/recommenditem_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="北京市朝阳区奥体中心"
        android:textColor="@color/bg_999999"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/recommenditem_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019-12-02"
            android:layout_gravity="center_vertical"
            android:textColor="@color/bg_999999"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/browse"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/recommenditem_browsecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="02"
            android:textColor="@color/bg_999999"
            android:textSize="15sp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/recommenditem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="02"
            android:textColor="@color/bg_999999"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/recommenditem_collect_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nopraise" />

        <TextView
            android:id="@+id/recommenditem_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="12"
            android:textColor="@color/bg_999999"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="34.5dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_e3e3e3" />

</LinearLayout>