<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recommend_header_lly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/recommenditem_headerimg"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="快速入口"
            android:textColor="@color/bg_333333"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buy_car"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/buycar" />

            <ImageView
                android:id="@+id/publicusecar"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/publicusecar" />

            <ImageView
                android:id="@+id/logisticsusecar"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/logisticsusecar" />
        </LinearLayout>

    </LinearLayout>
    <!--资讯布局-->
    <LinearLayout
        android:id="@+id/recommendnews_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29.5dp">

            <ImageView
                android:id="@+id/recommenditem_headericon"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/recommenditem_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="黑暗骑士"
                android:textColor="@color/bg_000000"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recommenditem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/bg_000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/recommenditem_img"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/recommenditem_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2019-12-02"
                android:textColor="@color/bg_7d7d7d"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/browse" />

            <TextView
                android:id="@+id/recommenditem_browsecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="02"
                android:textColor="@color/bg_7d7d7d"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/recommenditem_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="12"
                android:textColor="@color/bg_7d7d7d"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="34.5dp"
            android:layout_marginRight="15dp"
            android:background="@color/bg_e3e3e3" />
    </LinearLayout>

    <!--此刻1-->
    <LinearLayout
        android:id="@+id/recommendnow_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="29.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/recommenditem_headericon1"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/recommenditem_nickname1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="黑暗骑士"
                    android:textColor="@color/bg_000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/recommenditem_follow"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/follow"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/bg_333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/recommenditem_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/mebooth_delete"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/recommenditem_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/bg_000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/recommenditem_imgone1"
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/recommenditem_img_llytwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/recommenditem_imgone2"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/recommenditem_imgtwo1"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommenditem_img_llythree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/recommenditem_imgone3"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/recommenditem_imgtwo2"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <ImageView
                android:id="@+id/recommenditem_imgthree1"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/recommenditem_img_llyfour1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recommenditem_imgone4"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/recommenditem_imgtwo3"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recommenditem_img_llyfour2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recommenditem_imgthree2"
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/recommenditem_imgfour"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/recommenditem_imgmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/moreimg_bg"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="9图"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/recommenditem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/gpsimg"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="北京市朝阳区奥体中心"
            android:textColor="@color/bg_000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/recommenditem_time1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2019-12-02"
                android:textColor="@color/bg_7d7d7d"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/recommenditem_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="02"
                android:textColor="@color/bg_7d7d7d"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/recommenditem_collect_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/nocollect" />

            <TextView
                android:id="@+id/recommenditem_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="12"
                android:textColor="@color/bg_7d7d7d"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="34.5dp"
            android:layout_marginRight="15dp"
            android:background="@color/bg_e3e3e3" />

    </LinearLayout>

</LinearLayout>
