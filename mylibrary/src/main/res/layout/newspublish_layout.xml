<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/newspublishheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/public_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/public_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/bg_000000"
                android:textSize="16sp"
                android:text="写笔记"/>

            <TextView
                android:id="@+id/public_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="25dp"
                android:textColor="@color/bg_E73828"
                android:textSize="15sp"
                android:text="发布"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--<com.mebooth.mylibrary.main.view.GloriousRecyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/classify_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:overScrollMode="never" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newspublishadd_lly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/newspublish_addtext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/newpublishaddtext"/>
        <ImageView
            android:id="@+id/newspublish_addimg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/newpublishaddtu_pian"/>
        <TextView
            android:id="@+id/newspublish_addvideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="视频"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="47.5dp">

        <TextView
            android:id="@+id/publish_gps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/gpsimg"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="中国北京" />
        <com.mebooth.mylibrary.main.view.ToggleButton
            android:id="@+id/newlyaddress_default"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/lib_pub_dimen_margin"
            app:lib_pub_tbtn_colorPadding="@color/lib_pub_color_hint"
            app:lib_pub_tbtn_colorThumb="@color/lib_pub_color_white"
            app:lib_pub_tbtn_colorTrackOff="@color/bg_e3e3e3"
            app:lib_pub_tbtn_colorTrackOpen="@color/bg_E73828"
            app:lib_pub_tbtn_duration="250"
            android:layout_gravity="center_vertical"
            app:lib_pub_tbtn_padding="1.5dp" />
    </LinearLayout>

</LinearLayout>