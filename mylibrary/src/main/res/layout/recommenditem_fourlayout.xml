<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="29.5dp"
    android:background="@color/bg_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/recommenditem_headericon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/recommenditem_nickname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="黑暗骑士"
                android:textColor="@color/bg_000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/otheruser_medal_1"
                    android:layout_width="25dp"
                    android:layout_height="24dp" />

                <ImageView
                    android:id="@+id/otheruser_medal_2"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp" />

                <ImageView
                    android:id="@+id/otheruser_medal_3"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp" />

                <ImageView
                    android:id="@+id/otheruser_medal_4"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp" />

                <ImageView
                    android:id="@+id/otheruser_medal_5"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp" />

                <ImageView
                    android:id="@+id/otheruser_medal_6"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/recommenditem_follow"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/follow"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/bg_333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/recommenditem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:src="@drawable/mebooth_delete"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/recommenditem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见十大富豪是看得见回复可见"
        android:textColor="@color/bg_000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommenditem_imgone"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/recommenditem_imgtwo"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommenditem_imgthree"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recommenditem_imgfour"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/recommenditem_imgmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/moreimg_bg"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="9图"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/recommenditem_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/gpsimg"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="北京市朝阳区奥体中心"
        android:textColor="@color/bg_000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/recommenditem_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019-12-02"
            android:textColor="@color/bg_7d7d7d"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/recommenditem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="02"
            android:textColor="@color/bg_7d7d7d"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/recommenditem_collect_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nocollect" />

        <TextView
            android:id="@+id/recommenditem_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="12"
            android:textColor="@color/bg_7d7d7d"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="34.5dp"
        android:layout_marginRight="15dp"
        android:background="@color/bg_e3e3e3" />

</LinearLayout>