<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:background="@drawable/decoration_popupbg">

        <ImageView
            android:id="@+id/decoration_popup_guang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/decoration_popup_guang"
            android:layout_gravity="center"/>
        
        <ImageView
            android:id="@+id/decoration_popup_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/whilte_bg">

        <TextView
            android:id="@+id/decoration_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="神采奕奕"
            android:textSize="23sp"
            android:textColor="@color/bg_ff3939"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25.5dp"/>
        <TextView
            android:id="@+id/decoration_popup_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已完成....."
            android:textSize="15sp"
            android:textColor="@color/bg_666666"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"/>
        
        <TextView
            android:id="@+id/decoration_popup_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="37.5dp"
            android:layout_marginRight="37.5dp"
            android:layout_marginTop="16.5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/red_bg"
            android:text="确认"
            android:textColor="@color/bg_ffffff"
            android:textSize="15sp"
            android:gravity="center"/>
        
    </LinearLayout>

</LinearLayout>