<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_ffffff">

    <LinearLayout
        android:id="@+id/noadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_f6f6f6"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="22.5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/fiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/publish_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_ffffff"
                android:gravity="top"
                android:hint="请输入内容......"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:minLines="5"
                android:maxLength="1000"
                android:textColor="@color/bg_909090"
                android:textColorHint="@color/bg_7d7d7d"
                android:textSize="14sp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/publish_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:background="@drawable/publish_left"/>
                <ImageView
                    android:id="@+id/publish_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/publish_right"/>
            </LinearLayout>
            <TextView
                android:id="@+id/publish_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/publish_delete_bg"
                android:paddingLeft="20dp"
                android:layout_gravity="center|right"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="删除"
                android:textColor="@color/bg_333333"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>


</LinearLayout>